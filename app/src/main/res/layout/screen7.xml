<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="#313133">

    <!-- Top Bar -->
    <RelativeLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:padding="12dp">

        <!-- Back Button -->
        <ImageView
            android:id="@+id/back_button"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/arrow_back_white"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"/>

        <!-- Profile Name -->
        <TextView
            android:id="@+id/profile_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fouad Ikram"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="3dp"
            android:textStyle="bold"/>
    </RelativeLayout>

    <!-- Profile Picture -->
    <ImageView
        android:id="@+id/profile_picture"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/profile_pic1"
        android:scaleType="centerCrop"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="64dp"
        android:clipToOutline="true"
        android:background="@drawable/circle_background"/>

    <!-- View Profile Button -->
    <Button
        android:id="@+id/view_profile_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Profile"
        android:textColor="@color/white"
        android:background="@drawable/rounded_button"
        android:layout_below="@id/profile_picture"

        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"/>

    <!-- Chat Messages -->
    <LinearLayout
        android:id="@+id/chat_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/view_profile_button"
        android:layout_marginTop="24dp"
        android:padding="16dp"
        android:orientation="vertical">

        <!-- Incoming Message -->

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_alignParentEnd="true">

            <TextView
                android:id="@+id/message_0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hellow,How are you?"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:padding="12dp"
                android:background="@drawable/rounded_button"
                android:layout_alignParentEnd="true"/>

            <TextView
                android:id="@+id/time_0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="01:30"
                android:textColor="@color/white"
                android:textSize="10sp"
                android:layout_below="@id/message_0"
                android:layout_alignEnd="@id/message_0"
                android:layout_marginTop="2dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp">

            <ImageView
                android:id="@+id/chat_profile_1"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/profile_pic1"
                android:clipToOutline="true"
                android:background="@drawable/circle_background"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"/>

            <TextView
                android:id="@+id/message_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hi, I am great. Wbu?"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:padding="12dp"
                android:background="@drawable/rounded_button"
                android:layout_toEndOf="@id/chat_profile_1"
                android:layout_marginStart="8dp"/>

            <TextView
                android:id="@+id/time_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10:32"
                android:textColor="@color/white"
                android:textSize="10sp"
                android:layout_below="@id/message_1"
                android:layout_alignStart="@id/message_1"
                android:layout_marginTop="2dp"/>
        </RelativeLayout>

        <!-- Outgoing Message -->
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_alignParentEnd="true">

            <TextView
                android:id="@+id/message_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="I am doing well"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:padding="12dp"
                android:background="@drawable/rounded_button"
                android:layout_alignParentEnd="true"/>

            <TextView
                android:id="@+id/time_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="01:30"
                android:textColor="@color/white"
                android:textSize="10sp"
                android:layout_below="@id/message_2"
                android:layout_alignEnd="@id/message_2"
                android:layout_marginTop="2dp"/>
        </RelativeLayout>

        <!-- Incoming Message -->
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp">

            <ImageView
                android:id="@+id/chat_profile_2"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/profile_pic1"
                android:clipToOutline="true"
                android:background="@drawable/circle_"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"/>

            <TextView
                android:id="@+id/message_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Good to know"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:padding="12dp"
                android:background="@drawable/rounded_button"
                android:layout_toEndOf="@id/chat_profile_2"
                android:layout_marginStart="8dp"/>

            <TextView
                android:id="@+id/time_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="01:30"
                android:textSize="10sp"
                android:textColor="@color/white"
                android:layout_below="@id/message_3"
                android:layout_alignStart="@id/message_3"
                android:layout_marginTop="2dp"/>
        </RelativeLayout>
    </LinearLayout>


    <TextView
        android:id="@+id/vanishtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/chat_container"
        android:text="You've turned on vanish mode. New messages will disappear in
24 hours after everyone has seen them."
        android:gravity="center"
        android:textSize="12sp"

        android:textColor="@color/white"/>


    <Button
        android:id="@+id/vanishtext2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="There is something IMP you should know"
        android:textColor="@color/white"
        android:background="@drawable/rounded_button"
        android:layout_below="@id/vanishtext"

        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="01:30"
        android:textColor="@color/white"
        android:textSize="10sp"
        android:layout_below="@id/vanishtext2"
        android:layout_marginLeft="300dp"
        android:layout_marginTop="2dp"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/rounded_button"
        android:padding="8dp">

        <!-- Typing Bar (EditText) -->
        <EditText
            android:id="@+id/typing_bar"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_toStartOf="@id/send_icon"
            android:hint="Typing..."
            android:paddingStart="16dp"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/white"/>

        <!-- Send Icon -->
        <ImageView
            android:id="@+id/send_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="16dp"

            android:src="@drawable/send_icon"/>
    </RelativeLayout>


</RelativeLayout>