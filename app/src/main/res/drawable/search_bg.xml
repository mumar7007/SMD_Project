<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Background Color -->
    <solid android:color="#F5F5F5" />

    <!-- Rounded Corners -->
    <corners android:radius="16dp" />

    <!-- Border / Stroke -->
    <stroke
        android:width="1dp"
        android:color="#DADADA" />

    <!-- Padding inside -->
    <padding
        android:left="8dp"
        android:right="8dp"
        android:top="4dp"
        android:bottom="4dp" />
</shape>
